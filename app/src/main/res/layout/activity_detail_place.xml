<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/main_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtBackHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_arrow_back_24"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/imgStoreDetail"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/food" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/space"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:id="@+id/txtNameStoreDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Tiệm bánh mì Hà Nội"
                android:textStyle="bold"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/space"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Địa chỉ quán: " />

            <TextView
                android:id="@+id/txtLocationStoreDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:text="123, Võ Văn Ngân, Thủ Đức, TPHCM" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/space"
                android:orientation="vertical"
                tools:ignore="Suspicious0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/space"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="@color/main_color"
                android:textColor="@color/white"
                android:text="Danh sách món ăn"/>

            <ListView
                android:id="@+id/lvFoodOfStore"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:padding="10dp"
                android:scrollbars="none"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>